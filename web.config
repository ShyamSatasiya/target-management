<configuration>
    <system.webServer>
        <handlers>
            <add name="NextJs" path="*" verb="*" modules="iisnode" />
        </handlers>
        <rewrite>
            <rules>
                <rule name="NextJs" stopProcessing="true">
                    <match url=".*" />
                    <action type="Rewrite" url="server.js" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
